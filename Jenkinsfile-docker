pipeline {

    agent none

    environment {
        CI = 'true'
    }
    stages {

       stage('build') {

        parallel {

        stage('Build Docker Images') {

                    agent {
                        label 'linux'
                    }

                    steps {
                        catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE'){
                            sh label: 'docker-build', script: 'cd /home/jenkins/go/src/infini.sh/agent/ && make build && chmod a+x bin/agent'
                            sh label: 'docker-build', script: 'cd /home/jenkins/go/src/infini.sh/agent/bin && docker build -t infini-agent  -f ../docker/Dockerfile .'
                            sh label: 'docker-tagging', script: 'docker tag infini-agent infinilabs/agent:latest && docker tag infini-agent infinilabs/agent:$VERSION-$BUILD_NUMBER'
                            sh label: 'docker-push', script: 'docker push infinilabs/agent:$VERSION-$BUILD_NUMBER && docker push infinilabs/agent:latest'
                        }
                    }
                }
    } }
    }
}
